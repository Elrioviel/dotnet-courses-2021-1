@model User_Awards.Models.Award

<form method="post" asp-action="CreateUser">
    <div class="border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Award</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="AwardTitle"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="AwardDescription"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="AwardTitle" class="form-control"/>
                        <span asp-validation-for="AwardTitle" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <input asp-for="AwardDescription" class="form-control" />
                        <span asp-validation-for="AwardDescription" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Add"/>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

